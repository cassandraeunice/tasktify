        font-weight: 400;
        line-height: 27px;
        letter-spacing: 0em;
        text-align: center;
        color:#000000;
        border: none;
        margin-left: 170px;
        margin-top: 60px;
        transition: transform 0.5s ease;
        
    }

    .Add_Task.clicked {
