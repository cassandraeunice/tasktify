                    // ... other details
                };
            }

            function populateModalFields(taskDetails) {
                document.getElementById('taskname').value = taskDetails.name;
                // ... populate other fields
            }

            function saveTask() {
                const taskDetails = {
                    name: document.getElementById('taskname').value,
                    // ... other details
                };

                // You can use isEditMode to determine whether to save as a new task or update an existing one
                if (isEditMode) {
