@{
    ViewData["Title"] = "To-do";
    Layout = "_Layout";
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    h3 {
        font-size: 70px;
        color: #000;
        text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        margin-left: 30px;
        margin-top: 10px;
    }

    #todosFolder {
        margin-top: -50px;
        width: 160vh;
    }

    .Add_Task {
        position: relative;
        top: -20px;
        left: 600px;
        height: 66px;
        width: 166px;
        border-radius: 10px;
        background: #8ACCA4;
        font-size: 27px;
        font-weight: 400;
        line-height: 27px;
        letter-spacing: 0em;
        text-align: center;
        color: #FFFBFB;
        border: none;
        margin-right: 20px;
    }

    #addtask {
        width: 500px;
        margin: 20px auto;
        padding: 25px;
        border: 2px solid #3498db;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        position: relative;
    }


    h2 {
        text-align: center;
        color: #3498db;
        font-size: 24px;
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-size: 16px;
        margin-bottom: 8px;
        color: #333;
    }

    input,
    select,
    textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
        margin-bottom: 12px;
    }

    button {
        padding: 12px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        button[type="submit"] {
            background-color: #3498db;
            color: #fff;
        }

        button[type="reset"] {
            background-color: #808080;
            color: #fff;
            float: right;
        }

        button.category,
        button.priority {
            display: inline-block;
            padding: 10px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

            button.category:hover,
            button.priority:hover {
                background-color: #f4f4f4;
            }

        button.category {
            background-color: #87CEEB;
        }

        button.priority {
            background-color: #6DBA8B;
        }

        button.back {
            position: absolute;
            top: 15px;
            left: 15px;
            background-color: transparent;
            color: black;
            font-size: 17px;
            border: none;
            cursor: pointer;
        }

            button.back:hover {
                text-decoration: underline;
            }

        button.selected {
            background-color: #3498db;
            color: #fff;
        }

    /* New styles for the modal */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .modal-content {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

    table, th, td {
        padding: 1rem;
        border-collapse: collapse;
        text-align: center;
    }

    main.table {
        width:77vw;
        height: 90vh;
        background-color: #fff5;
        box-shadow: 0 .4rem .8rem #0005;
        border-radius: .8rem;
        overflow:hidden;
    }

    .table_body{
        width: 95%;
        max-height: calc(89% - 1.6rem);
        background-color: #fffb;
        margin: .8rem auto;
        border-radius: .6rem;
        overflow: auto;
    }

    .table_body::-webkit-scrollbar{
        width: 0.5rem;
        height: 0.5rem;
    }

    .table_body::-webkit-scrollbar-thumb {
         border-radius: .5rem;
         background-color: #0004;
         visibility: hidden;
        }

        .table_body:hover::-webkit-scrollbar-thumb {
           visibility: visible;
        }

        table {
            width: 100%;
        }

    .category {
        padding: .4rem 0;
        border-radius: 2rem;
        text-align: center;
    }

    .category.school {
        background-color: #D2F1F5;
    }

    .category.organization {
        background-color: #FFF8E8;
    }

    .category.personal {
        background-color: #DADADA;
    }

        thead th {
            position: sticky;
            top: 0;
            left: 0;
            background-color: #d5d1defe;
        }

        tbody tr:hover {
            background-color: #fff6;
        }

        @@media (max-width: 1000px) {
            td:not(:first-of-type) {
                min-width: 12.1rem;
            }
        }

</style>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-do</title>

    <script>
        const categoryButtons = document.querySelectorAll('.category');
        const priorityButtons = document.querySelectorAll('.priority');

        function handleButtonClick(buttons, selectedButton) {
            buttons.forEach(button => {
                button.classList.remove('selected');
            });

            selectedButton.classList.add('selected');
        }

        categoryButtons.forEach(button => {
            button.addEventListener('click', () => {
                handleButtonClick(categoryButtons, button);
            });
        });

        priorityButtons.forEach(button => {
            button.addEventListener('click', () => {
                handleButtonClick(priorityButtons, button);
            });
        });

        // Function to open the modal
        function openModal() {
            document.getElementById('addTaskModal').style.display = 'flex';
        }

        // Function to close the modal
        function closeModal() {
            document.getElementById('addTaskModal').style.display = 'none';
        }
    </script>
</head>
<body>

    <!-- Modal -->
    <div id="addTaskModal" class="modal">
        <div class="modal-content" id="addtask">
            <button class="back" onclick="closeModal()">&#8592; Back</button>
            <h2>Add Task</h2>

            <label for="taskname">Task Name</label>
            <input type="text" id="taskname" name="taskname">

            <label for="category">Category</label>
            <div>
                <button class="category" value="personal">Personal</button>
                <button class="category" value="work">Work</button>
                <button class="category" value="School">School</button>
            </div>

            <label for="duedate">Due Date</label>
            <input type="date" id="duedate" name="duedate">

            <label for="priority">Priority</label>
            <div>
                <button class="priority" value="high">High</button>
                <button class="priority" value="medium">Medium</button>
                <button class="priority" value="low">Low</button>
            </div>

            <label for="notes">Notes</label>
            <textarea id="notes" name="notes" rows="5"></textarea>

            <button type="submit">Save</button>
            <button type="reset">Cancel</button>
        </div>
    </div>

    <h3>
        Tasks<!-- Trigger button -->
        <button class="Add_Task" onclick="openModal()">Add Tasks+</button>
    </h3>

    <div id="todosFolder">

            <main class="table">

                <section class="table_body">
                    <table>

                        <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Status</th>
                                <th>Tasks</th>
                                <th>Category</th>
                                <th>Due Date</th>
                                <th>Priority</th>
                                <th>Notes</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td class="action-column">
                                    <span class="edit-btn">🖉</span>
                                    <span class="delete-btn">🗑️</span>
                                </td>
                                <td class="status-column"><input type="checkbox" class="status-checkbox"></td>
                                <td>Coding</td>
                                <td><p class="category personal">Personal</p></td>
                                <th>November 14, 2023</th>
                                <td>Low</td>
                                <td>Sermonan si Hugo</td>
                            </tr>

                            <tr>
                                <td class="action-column">
                                    <span class="edit-btn">🖉</span>
                                    <span class="delete-btn">🗑️</span>
                                </td>
                                <td class="status-column"><input type="checkbox" class="status-checkbox"></td>
                                <td>Coding</td>
                                <td><p class="category school">School</p></td>
                                <th>November 14, 2023</th>
                                <td>Low</td>
                                <td>Sermonan si Hugo</td>
                            </tr>

                            <tr>
                                <td class="action-column">
                                    <span class="edit-btn">🖉</span>
                                    <span class="delete-btn">🗑️</span>
                                </td>
                                <td class="status-column"><input type="checkbox" class="status-checkbox"></td>
                                <td>Coding</td>
                                <td><p class="category organization">Organization</p></td>
                                <th>November 14, 2023</th>
                                <td>Low</td>
                                <td>Sermonan si Hugo</td>
                            </tr>

                        </tbody>

                    </table>
                </section>

            </main>
       
    </div>

</body>
</html>
