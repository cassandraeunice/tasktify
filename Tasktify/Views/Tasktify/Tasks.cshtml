    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let isEditMode = false;

            document.querySelector('.Add_Task').addEventListener('click', openModal);
            document.querySelector('.edit-btn').addEventListener('click', openEditModal);
            document.querySelector('button[type="submit"]').addEventListener('click', saveTask);
            document.querySelector('button[type="reset"]').addEventListener('click', closeModal);
            document.querySelector('.back').addEventListener('click', function () {
                if (isEditMode) {
                    // Handle back button in edit mode (like cancel)
                    closeModal();
                } else {
                    // Handle back button in add mode (like cancel)
                    closeModal();
                }
            });

            const categoryButtons = document.querySelectorAll('.category');
            const priorityButtons = document.querySelectorAll('.priority');
            const statusButtons = document.querySelectorAll('.status-button');

            function handleButtonClick(buttons, selectedButton) {
                buttons.forEach(button => {
                    button.classList.remove('selected', 'clicked');
                });

                selectedButton.classList.add('selected', 'clicked');
            }

            categoryButtons.forEach(button => {
                button.addEventListener('click', () => {
                    handleButtonClick(categoryButtons, button);
                });
            });

            priorityButtons.forEach(button => {
                button.addEventListener('click', () => {
                    handleButtonClick(priorityButtons, button);
                });
            });

            statusButtons.forEach(button => {
                button.addEventListener('click', () => {
                    handleButtonClick(statusButtons, button);
                });
            });

            const statusButtonsContainer = document.querySelector('.status-buttons');
            const statusLabel = document.querySelector('label[for="status"]');

            function openModal() {
                isEditMode = false;
                clearModalFields();

                // Show/hide the status label and buttons based on the mode
                statusLabel.style.display = 'none';
                statusButtonsContainer.style.display = 'none';

                const addButton = document.querySelector('.Add_Task');
                addButton.classList.add('clicked');
                document.getElementById('addTaskModal').style.display = 'flex';
            }

            function openEditModal() {
                isEditMode = true;
                clearModalFields();

                // Show the status label and buttons in edit mode
                statusLabel.style.display = 'block';
                statusButtonsContainer.style.display = 'flex';

                const editButton = document.querySelector('.edit-btn');
                editButton.classList.add('clicked');
                document.getElementById('addTaskModal').style.display = 'flex';
            }

            function closeModal() {
                console.log('Close modal function called');
                isEditMode = false;
                clearModalFields();
                const addButton = document.querySelector('.Add_Task');
                const editButton = document.querySelector('.edit-btn');

                addButton.classList.remove('clicked');
                editButton.classList.remove('clicked');

                document.getElementById('addTaskModal').style.display = 'none';
            }

            function clearModalFields() {
                document.getElementById('taskname').value = '';
                categoryButtons.forEach(button => button.classList.remove('selected', 'clicked'));
                priorityButtons.forEach(button => button.classList.remove('selected', 'clicked'));
                statusButtons.forEach(button => button.classList.remove('selected', 'clicked'));
                document.getElementById('notes').value = '';
            }

