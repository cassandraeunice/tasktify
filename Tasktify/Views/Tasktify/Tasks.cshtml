    Layout = "_Layout";
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }



    h3 {
        font-size: 70px;
        color: #000;
        display: flex;
        text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        margin-left: 300px;
        margin-top: 10px;

    }

    .category button,
    .priority button,
    .status-button {
        transition: transform 0.5s ease;
    }

        .category button.clicked,
        .priority button.clicked,
        .status-button.clicked {            
        }

