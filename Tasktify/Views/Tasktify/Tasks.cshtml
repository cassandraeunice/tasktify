        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
        margin-bottom: 12px;
    }

    button {
        padding: 12px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        button[type="submit"] {
            background-color: #3498db;
            color: #fff;
        }

        button[type="reset"] {
            background-color: #808080;
            color: #fff;
            float: right;
        }

        button.category,
        button.priority {
            display: inline-block;
            padding: 10px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

            button.category:hover,
            button.priority:hover {
                background-color: #f4f4f4;
            }

        button.category {
            background-color: #87CEEB;
        }

        button.priority {
            background-color: #6DBA8B;
        }

        button.back {
            position: absolute;
            top: 15px;
            left: 15px;
            background-color: transparent;
            color: black;
            font-size: 17px;
            border: none;
            cursor: pointer;
        }

            button.back:hover {
                text-decoration: underline;
            }

        button.selected {
            background-color: #3498db;
            color: #fff;
        }

    /* New styles for the modal */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .modal-content {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

    table, th, td {
        padding: 1rem;
        border-collapse: collapse;
        text-align: center;
    }

    main.table {
        width:77vw;
        height: 90vh;
        background-color: #fff5;
        box-shadow: 0 .4rem .8rem #0005;
        border-radius: .8rem;
        overflow:hidden;
    }

    .table_body{
        width: 95%;
        max-height: calc(89% - 1.6rem);
        background-color: #fffb;
        margin: .8rem auto;
        border-radius: .6rem;
        overflow: auto;
    }

    .table_body::-webkit-scrollbar{
        width: 0.5rem;
        height: 0.5rem;
    }

    .table_body::-webkit-scrollbar-thumb {
         border-radius: .5rem;
         background-color: #0004;
         visibility: hidden;
        }

        .table_body:hover::-webkit-scrollbar-thumb {
           visibility: visible;
        }

        table {
            width: 100%;
        }

    .category {
        padding: .4rem 0;
        border-radius: 2rem;
        text-align: center;
    }

    .category.school {
        background-color: #D2F1F5;
    }

    .category.organization {
        background-color: #FFF8E8;
    }

    .category.personal {
        background-color: #DADADA;
    }

        thead th {
            position: sticky;
            top: 0;
            left: 0;
            background-color: #d5d1defe;
        }

        tbody tr:hover {
            background-color: #fff6;
        }

        @@media (max-width: 1000px) {
            td:not(:first-of-type) {
                min-width: 12.1rem;
            }
        }

    .status-buttons {
        display: flex;
        justify-content: space-between;
    }

    .status-button {
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

        .status-button:hover {
            background-color: #f4f4f4;
        }



</style>

